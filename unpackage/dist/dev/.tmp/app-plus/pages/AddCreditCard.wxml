<view class="content"><view class="inline commmonInputContainer"><text class="labelText">卡号：</text><input placeholder="请输入卡号" data-event-opts="{{[['input',[['onCardNumberKeyInput',['$event']]]]]}}" value="{{cardNumber}}" bindinput="__e"/></view><view class="inline commmonInputContainer"><text class="labelText">银行：</text><input placeholder="请输入银行" data-event-opts="{{[['input',[['onBankKeyInput',['$event']]]]]}}" value="{{bank}}" bindinput="__e"/></view><view class="inline commmonInputContainer"><text class="labelText">手机号：</text><input placeholder="请输入预留手机号(选填)" data-event-opts="{{[['input',[['onMobileKeyInput',['$event']]]]]}}" value="{{mobile}}" bindinput="__e"/></view><view class="inline commmonInputContainer"><text class="labelText">额度：</text><input placeholder="请输入额度(元)" data-event-opts="{{[['input',[['onLimitKeyInput',['$event']]]]]}}" value="{{limit}}" bindinput="__e"/></view><view class="inline commmonInputContainer"><text class="labelText">账单日：</text><input placeholder="请输入账单日1-31" data-event-opts="{{[['input',[['onBillDayKeyInput',['$event']]]]]}}" value="{{billDayStr}}" bindinput="__e"/></view><view class="inline commmonInputContainer"><text class="labelText">还款日：</text><input placeholder="请输入还款日1-31" data-event-opts="{{[['input',[['onRepaymentDayKeyInput',['$event']]]]]}}" value="{{repaymentDayStr}}" bindinput="__e"/></view><button class="addCardBtn" type="primary" data-event-opts="{{[['tap',[['addCardAction',['$event']]]]]}}" bindtap="__e">添加</button></view>