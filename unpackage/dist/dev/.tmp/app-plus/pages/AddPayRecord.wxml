<view class="content"><view class="cell inline"><text>选择银行卡：</text><picker class="cardPiker" value="{{cardIndex}}" range="{{cardArray}}" range-key="name" data-event-opts="{{[['change',[['bindCardPickerChange',['$event']]]]]}}" bindchange="__e"><text class="pickerText">{{cardArray[cardIndex].name}}</text></picker></view><view class="cell inline"><text>选择门店：</text><picker class="cardPiker" mode="multiSelector" value="{{shopIndexArray}}" range="{{allShopArrayDataSource}}" range-key="name" data-event-opts="{{[['columnchange',[['bindShopPickerChange',['$event']]]]]}}" bindcolumnchange="__e"><text class="pickerText">{{allShopArrayDataSource[1][shopIndexArray[1]].name}}</text></picker></view><view class="cell inline"><text>支付途径：</text><picker class="cardPiker" value="{{payWayIndex}}" range="{{payWayArray}}" range-key="name" data-event-opts="{{[['change',[['bindPayWayPickerChange',['$event']]]]]}}" bindchange="__e"><text class="pickerText">{{payWayArray[payWayIndex].name}}</text></picker></view><view class="cell inline"><text>刷卡时间：</text><picker mode="date" value="{{date}}" start="{{startDate}}" end="{{endDate}}" data-event-opts="{{[['change',[['bindDateChange',['$event']]]]]}}" bindchange="__e"><text class="pickerText">{{date}}</text></picker><picker mode="time" value="{{time}}" start="09:01" end="21:01" data-event-opts="{{[['change',[['bindTimeChange',['$event']]]]]}}" bindchange="__e"><text class="pickerText">{{time}}</text></picker></view><view class="cell inline"><text>价格(元):</text><input type="digit" placeholder="输入刷卡价格" data-event-opts="{{[['input',[['onPriceKeyInput',['$event']]]]]}}" value="{{price}}" bindinput="__e"/></view><button class="addPayRecordBtn commonBtn" type="primary" data-event-opts="{{[['tap',[['addPayRecordAction',['$event']]]]]}}" bindtap="__e">添加记录</button></view>