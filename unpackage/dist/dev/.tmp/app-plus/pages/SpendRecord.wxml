<view class="content"><block wx:if="{{cardRecord}}"><scroll-view><view class="simpleInfo"><view class="inline"><text>行用卡刷卡总额：</text><text>{{cardRecord.totalMoney+"元"}}</text></view><view class="inline"><text>需要还款：</text><text>{{cardRecord.totalRepaymentMoney+"元"}}</text></view><view class="inline"><text>等待还款：</text><text>{{cardRecord.totalWaitRepaymentMoney+"元"}}</text></view></view><block wx:for="{{$root.l0}}" wx:for-item="cardItem" wx:for-index="cIdx" wx:key="cIdx"><view class="cardView"><view><text>银行：</text><text>{{cardItem.$orig.bank}}</text><block wx:if="{{cardItem.$orig.cardNumber&&cardItem.$orig.cardNumber.length>8}}"><text>{{cardItem.g0+'****'+cardItem.g1}}</text></block></view><view class="cell"><view class="inline"><text>额度：</text><text>{{cardItem.$orig.limit+"元"}}</text></view><view class="inline"><text>已用：</text><text>{{cardItem.$orig.willRepaymentMoney+cardItem.$orig.waitRepaymentMoney+"元"}}</text></view><view class="inline"><text>占比：</text><text>{{cardItem.m0}}</text></view></view><view class="cell"><text>账单日：</text><text>{{cardItem.$orig.billDate}}</text><text>还款日：</text><text>{{cardItem.$orig.repaymentDate}}</text></view><block wx:if="{{cardItem.$orig.durationCurrentRepayment>=0&&cardItem.$orig.willRepaymentMoney>0}}"><view class="cell repayView"><text class="redText">{{cardItem.$orig.durationCurrentRepayment+"天之内"}}</text><text class="redText">需要还款：</text><text>{{cardItem.$orig.willRepaymentMoney}}</text></view></block><block wx:if="{{cardItem.$orig.waitRepaymentMoney>0}}"><view class="cell willRepayView"><text class="greenText">{{cardItem.$orig.durationNextBill+"天后会出新账单"}}</text><text class="greenText">{{cardItem.$orig.waitRepaymentMoney+"元"}}</text><text class="greenText">{{cardItem.$orig.durationNextRepayment+"天内需要还款"}}</text></view></block></view></block></scroll-view></block></view>